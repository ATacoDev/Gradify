<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: Quicksand, sans-serif;
            background-color: #ffffff;
            color: #000000;
        }

        .content {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 27%;
            background-color: #ffffff;
            color: #000000;
            padding: 15px;
            border-right: 1px solid #cccccc;
            height: calc(100vh - 40px);
            overflow-y: auto;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            color: #000000;
            text-decoration: none;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar a:hover {
            background-color: #f0f0f0;
            color: #000000;
        }

        .sidebar i {
            margin-right: 10px;
            font-size: 1.2em;
        }

        .app-icon {
            font-size: 2em;
            margin-bottom: 20px;
            text-align: center;
        }

        .posts {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .post {
            background-color: #ffffff;
            color: #000000;
            border: 1px solid #90EE90;
            border-radius: 8px;
            overflow: hidden;
            transition: box-shadow 0.3s ease;
        }

        .post:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .post-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .post-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .post-title {
            color: #000000;
            font-size: 1.2em;
            margin: 10px;
            font-weight: bold;
        }

        .post-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #f8f8f8;
        }

        .me-too-button {
            background-color: transparent;
            border: none;
            color: #000000;
            font-size: 18px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .me-too-button:hover {
            color: #90EE90;
        }

        .me-too-count {
            font-size: 14px;
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="content">
        <div class="sidebar">
            <div class="app-icon">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/profile"><i class="fas fa-user"></i> Profile</a>
            <a href="/create-post"><i class="fas fa-plus"></i> Post</a>
        </div>
        <div class="posts" id="posts">
            <!-- Posts will be generated here -->
        </div>
    </div>

    <script>
        const postsData = [
            {
                id: 1,
                title: "Calculus Midterm",
                image: "https://picsum.photos/300/200?random=1",
                reactions: 12,
            },
            {
                id: 2,
                title: "Computer Networks Quiz",
                image: "https://picsum.photos/300/200?random=2",
                reactions: 20,
            },
            {
                id: 3,
                title: "Cognitive Psychology Exam",
                image: "https://picsum.photos/300/200?random=3",
                reactions: 5,
            },
            {
                id: 4,
                title: "Organic Chemistry Lab Report",
                image: "https://picsum.photos/300/200?random=4",
                reactions: 8,
            },
            {
                id: 5,
                title: "Quantum Mechanics Simulation",
                image: "https://picsum.photos/300/200?random=5",
                reactions: 15,
            },
        ];

        function displayPosts() {
            const postsContainer = document.getElementById('posts');
            postsData.forEach(post => {
                const postDiv = document.createElement('div');
                postDiv.classList.add('post');
                postDiv.innerHTML = `
                    <a href="/feedback" class="post-link">
                        <img src="${post.image}" alt="${post.title}" class="post-image">
                        <div class="post-title">${post.title}</div>
                    </a>
                    <div class="post-footer">
                        <button class="me-too-button" onclick="meToo(this, event)">
                            <span class="me-too-count">${post.reactions}</span>
                            <i class="fas fa-hand-peace"></i>
                        </button>
                    </div>
                `;
                postsContainer.appendChild(postDiv);
            });
        }

        function meToo(button, event) {
            event.preventDefault(); // Prevent navigation to feedback page
            const countSpan = button.querySelector('.me-too-count');
            let count = parseInt(countSpan.textContent);
            count++;
            countSpan.textContent = count;
        }

        displayPosts();
    </script>
</body>
</html>
