<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/public/css/profile.css"> <!-- Link to your CSS file -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .content {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .posts {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .post {
            background: #eaeaea;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .post:hover {
            transform: translateY(-5px);
        }

        .post img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
        }

        .post-title {
            font-size: 1.2em;
            margin: 10px 0;
        }

        .post-summary {
            font-size: 0.9em;
            color: #555;
        }

        .post-reactions {
            margin-top: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1>User Profile</h1>
        <div class="posts" id="posts">
            <!-- Sample posts will be generated here -->
        </div>
    </div>

    <script>
        // Sample data for previous posts
        const postsData = [
            {
                title: "My First Climb",
                summary: "I finally climbed to the top of the wall. It was an amazing experience!",
                image: "https://picsum.photos/300/200?random=1", // Random image
                reactions: 12,
            },
            {
                title: "Outdoor Adventure",
                summary: "Spent a day climbing outdoors. The views were breathtaking!",
                image: "https://picsum.photos/300/200?random=2", // Random image
                reactions: 20,
            },
            {
                title: "Training for Competitions",
                summary: "Preparing for the upcoming climbing competition. Excited and nervous!",
                image: "https://picsum.photos/300/200?random=3", // Random image
                reactions: 5,
            },
            {
                title: "Fun with Friends",
                summary: "Had a great time climbing with friends this weekend.",
                image: "https://picsum.photos/300/200?random=4", // Random image
                reactions: 8,
            },
        ];

        // Function to display posts
        function displayPosts() {
            const postsContainer = document.getElementById('posts');
            postsData.forEach(post => {
                const postDiv = document.createElement('div');
                postDiv.classList.add('post');
                postDiv.innerHTML = `
                    <img src="${post.image}" alt="${post.title}">
                    <div class="post-title">${post.title}</div>
                    <div class="post-summary">${post.summary}</div>
                    <div class="post-reactions">${post.reactions} Reactions</div>
                `;
                postsContainer.appendChild(postDiv);
            });
        }

        // Initialize posts display
        displayPosts();
    </script>
</body>
</html>
